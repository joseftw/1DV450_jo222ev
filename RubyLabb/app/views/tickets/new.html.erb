<div class="row">
  <div class="span10 gradientGray">
    <h2>Add a new ticket to this project</h2>
    <%= form_for @ticket, :url => { :controller => :tickets, :action => :create } do |f| %>
      <fieldset>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :description %>
        <%= f.text_field :description %>
        
        <%= f.label :status_id %>
        <%= f.select :status_id, options_from_collection_for_select(Status.all, :id, :status_name) %>
        <%= f.hidden_field :project_id, :value => params[:id] %>
        <%= f.submit "Add ticket" %>
      </fieldset>
    <% end %>
  </div>

</div>

<%= params.inspect %>