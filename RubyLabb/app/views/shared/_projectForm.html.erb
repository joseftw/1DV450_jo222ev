<% if @project.errors.any? %>

  <div id="error_messages">
    <h4 class="">You have <%= pluralize(@project.errors.count, "error") %> in the form.</h2>
    <ul>
      <% @project.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>

<% end %>

<%= form_for @project do |f| %>
  <fieldset>
    
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_area :description, :size => "30x5" %>

    <%= f.label :start_date %>
    <span class="dateInput"><%= f.date_select :start_date %></span>

    <%= f.label :end_date %>
    <span class="dateInput"><%= f.date_select :end_date %></span>

    <%= f.submit "Save" ,:class => 'btn btn-success' %>
  </fieldset>
      <% end %>