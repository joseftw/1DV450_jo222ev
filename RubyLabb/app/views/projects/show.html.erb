<h1>Project details </h1>
<div id="projectDetailDiv" class="span9 offset1">
  <div class="row">
    <div class="span9">
      <h2><%= @project.name %></h2>
      <label for="singleProjectDescription" class="text-info">Description</label>
      <p id="singleProjectDescription"><%= @project.description %></p>
      <div id="singleProjectListContainer" class="row">
        <div class="span4">
          <label for="singleProjectTicketList">Project tickets</label>
          <ul ="singleProjectTicketList" class="inline">
            <% @project.tickets.each do |ticket| %>
              <li><%= link_to ticket.name, ticket_path(ticket) %></li>
            <% end %>
          </ul>
        </div>
        <div id="singleProjectListContainer" class="span4 pull-right">
          <label for="singleProjectMemberList">Project members</label>
          <ul ="singleProjectMemberList" class="inline">
            <% @project.users.each do |user| %>
              <li><%= link_to user.first_name, user_path(user) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>