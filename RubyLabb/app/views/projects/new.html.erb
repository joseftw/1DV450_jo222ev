<% content_for :menu do %>
  <li><a href="/home">Home</a></li>
  <li><a href="/projects">All projects</a></li>
  <li class="active"><a href="/projects/new">New project</a></li>
<% end %>
<div class="row">
    <div class="span10 gradientGray">
      <h2>Add a new project</h2>
      
      <%= form_for @project do |f| %>
        <fieldset>
          <%= f.label :name %>
          <%= f.text_field :name %>
          
          <%= f.label :description %>
          <%= f.text_field :description %>
          
          <%= f.label :start_date %>
          <span class="dateInput"><%= f.date_select :start_date %></span>
          
          <%= f.label :end_date %>
          <span class="dateInput"><%= f.date_select :end_date %></span>
          
          <%= f.submit "Add project" %>
        </fieldset>
      <% end %>
  </div>
</div>