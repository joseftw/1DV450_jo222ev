<% content_for :menu do %>
  <li><a href="/home">Home</a></li>
  <li class="active"><a href="/projects">All projects</a></li>
  <li><a href="/projects/new">New project</a></li>
<% end %>

<div class="row">  
  <div id="mainDiv" class="span12 gradientGray">
    <h1>All projects</h1>
    <ul id="projectsList" class="inline">
      <% @projects.each do |project| %>
      <li><h3 class="projectListH3"><%= link_to project.name, project_path(project) %></h3>
        <p class="projectCreator"><%= User.find(project.user_id).first_name %>
        <ul class="projectMemberList inline">
          <% project.users.each do |user| %>
            <li><%= link_to user.first_name, user_path(user) %></li>
          <% end %>  
        </ul>
      </li>
    <% end %>
    </ul>
  </div>
</div>
